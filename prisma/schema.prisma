generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id            String        @id @default(cuid())
  status        BookingStatus  @default(PENDING)

  fullName      String
  email         String
  phone         String?
  eventType     String        // "Event" or "Private"
  location      String?
  notes         String?

  // Simple: store ISO strings; you can switch to DateTime if you want.
  startIso      String
  endIso        String
  timezone      String        @default("America/Vancouver")

  confirmToken  String        @unique
  confirmedAt   DateTime?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([status])
  @@index([email])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
